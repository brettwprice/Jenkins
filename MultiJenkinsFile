pipeline {
    agent { docker { image 'python:3.5.1' } }
    stages {
        stage('Build') {
            steps {
                sh 'echo "Up"'
            }
        }
        stage('Update') {
            steps {
                sh 'Echo "Do somerthing on an update"'
            }
        }
        stage('Decomission') {
            steps {
                sh 'echo "Would take the box down or something"'
            }
        }
    }
}
